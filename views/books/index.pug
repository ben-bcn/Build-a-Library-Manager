extends /views/layout.pug

block content
  h1 Books#{subTitle}
  include /views/includes/books_header.pug

  table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year Released

          tbody
            each val in books
              tr
                td
                  a(href=`/books/detail/${val.id}`)= val.title
                td= val.author
                td= val.genre
                td= val.first_published
